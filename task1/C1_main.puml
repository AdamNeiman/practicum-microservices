@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(operator, "Оператор фермы", "Мониторинг и управление")
Person(admin, "Администратор", "Настройка системы и ролей")
System(central, "Центральный сервер мониторинга", "Управляет сбором, аналитикой, оповещениями")
System(agent, "Агент фермы", "Edge-устройство на ферме: сбор данных, видеоаналитика, управление устройствами")
System(erp, "ERP/Учетная система", "Обмен метриками, учёт поголовья")
System(mobile, "Мобильное приложение", "Оповещения, просмотр состояния")
System(cloud, "Облачный архив", "Хранение видеоданных и аналитики")

Rel(operator, mobile, "Использует")
Rel(operator, agent, "Работает с оборудованием")
Rel(admin, central, "Управляет настройками")
Rel(agent, central, "Синхронизирует данные и тревоги")
Rel(agent, mobile, "Оповещает о событиях")
Rel(central, erp, "Передает метрики, статусы")
Rel(agent, cloud, "Заливает архивные данные (при необходимости)")

@enduml
